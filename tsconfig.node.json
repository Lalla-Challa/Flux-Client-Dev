{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "dist-electron",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true
    },
    "include": [
        "electron/**/*.ts"
    ]
}