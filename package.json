{
  "name": "flux-client",
  "productName": "Flux Client",
  "description": "A modern, minimalist Desktop Git GUI with multi-account support",
  "main": "dist-electron/main.js",
  "author": "GitFlow",
  "license": "MIT",
  "scripts": {
    "dev": "node node_modules/vite/bin/vite.js",
    "build:electron": "tsc -p tsconfig.node.json",
    "build": "tsc && vite build && npm run build:electron",
    "preview": "vite preview",
    "electron:dev": "npm run build:electron && concurrently \"node node_modules/vite/bin/vite.js\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "framer-motion": "^11.0.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.0.1",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "dotenv": "^16.6.1",
    "electron": "^28.2.5",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.3",
    "vite": "^5.2.6",
    "wait-on": "^7.2.0"
  }
}