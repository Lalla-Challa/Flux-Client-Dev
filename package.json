{
  "name": "flux-client",
  "version": "1.1.1",
  "productName": "Flux Client",
  "description": "A modern, minimalist Desktop Git GUI with multi-account support",
  "main": "dist-electron/main.js",
  "author": "GitFlow",
  "license": "AGPL-3.0",
  "scripts": {
    "dev": "node node_modules/vite/bin/vite.js",
    "build:electron": "tsc -p tsconfig.node.json && node scripts/inject-env.js",
    "build": "tsc && vite build && npm run build:electron",
    "preview": "vite preview",
    "electron:dev": "npm run build:electron && concurrently \"node node_modules/vite/bin/vite.js\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "lint": "eslint src/ electron/"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@types/prismjs": "^1.26.6",
    "dagre": "^0.8.5",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.7.3",
    "framer-motion": "^11.0.8",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.564.0",
    "node-pty": "^1.1.0",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.0.1",
    "reactflow": "^11.11.4",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/dagre": "^0.7.53",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "dotenv": "^16.6.1",
    "electron": "^28.2.5",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^5.2.6",
    "wait-on": "^7.2.0"
  }
}